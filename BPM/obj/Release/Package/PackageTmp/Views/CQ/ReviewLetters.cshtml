@using BPM.Dto.Models.Latters
@model IEnumerable<LatterDto>
@{
    ViewBag.Title = "ReviewLetters";
}
<script src="~/Scripts/modalViewDocument.min.js"></script>
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Revisión de Cartas</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="~/Home/Index">Inicio</a></li>
                            <li><a href="~/PQR/PQR">PQRs</a></li>
                            <li><a href="~/PQR/PQRParagraph">Cartas</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="danger">
    <p class="error">@ViewBag.Error</p>
</div>


<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Tipo de carta </th>
                                    <th>Id Documento</th>
                                    <th>Editar</th>
                                    <th>Descargar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (LatterDto item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name_typeLatter</td>
                                            <td>@item.Id_DocumentCloud</td>
                                            <td><a onclick="viewDocumentInModal('@item.Id_DocumentCloud', false)" id="BtnEdit" class="btn btn-primary btn-sm" style="float: none"><i class="fa fa-edit"> </i></a></td>
                                            <td><a onclick="ChargeDownLoadDocx('@item.Id_DocumentCloud')" id="BtnPrint" class="btn btn-primary btn-sm" style="float: none"><i class="fa fa-download"> </i></a></td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a onclick="document.location='@Url.Content("~/CQ/CQManagement")'" id="Btn" class="btn btn-primary btn-sm" style="float: none">Finalizar</a>
</div>

