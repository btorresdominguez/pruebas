@using BPM.Dto.Configuration
@model RoleDto
@{
    ViewBag.Title = "Remove";
}


<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>¿Estas seguro de desactivar el rol?</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="~/Home/Index">Configuración</a></li>
                            <li><a href="~/Role/Role">Roles</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="content">
    <div class="card">
        <div class="card-body card-block">

            <form action="@Url.Content("~/Role/Remove")" method="post" enctype="multipart/form-data" class="form-horizontal" style="width:60%">
                <input type="hidden" name="IdRole" value="@Model.IdRole" />

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">@Model.Name</label></div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">@Model.Description</label></div>
                </div>

                <button style="float: right;" type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"> </i>&nbsp; Desactivar</button>
            </form>
        </div>

    </div>
    <div class="danger">
        <p class="error">@ViewBag.Error</p>
    </div>

</div>


@Scripts.Render("~/Scripts/User/User.js")
