
@using BPM.Dto.Models.Depuration
@model SendEmailDto
@{
    ViewBag.Title = "Edit";
}


<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Editar Envio de Correos</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="~/Home/Index">Configuración</a></li>
                            <li><a href="~/SendEmail/SendEmail"></a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="content">
    <div class="card">
        <div class="card-body card-block">
            <form action="@Url.Content("~/SendEmail/Edit")" method="post" enctype="multipart/form-data" class="form-horizontal" style="width:60%">
                <input type="hidden" name="IdEmail" value="@Model.IdEmail" />

           
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Asunto</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="Affair" name="Affair" placeholder="Asunto" required class="form-control" value="@Model.Affair" onkeypress="return validar(event)">
                        @Html.ValidationMessageFor(model => model.Affair)
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Contenido</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="Contents" name="Contents" placeholder="Contenido" required class="form-control" value="@Model.Contents" onkeypress="return validar(event)">
                        @Html.ValidationMessageFor(model => model.Contents)
                    </div>
                </div>

                <div class="row form-group" >
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Logo</label></div>
                    <div class="col-12 col-md-9"><input type="file" id="Image" name="Image" placeholder="Firma" class="form-control" onkeypress="return validar(event)"></div>
                </div>
                <div>
                    <button style="float: right; "  type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"> </i>&nbsp; Actualizar</button>
                </div>
            </form>
        </div>

    </div>
    <div class="danger">
        <p class="error">@ViewBag.Error</p>
    </div>

</div>


@Scripts.Render("~/Scripts/User/User.js")

<script type="text/javascript">
function validar(e) { // 1
            tecla = (document.all) ? e.keyCode : e.which; // 2
            if (tecla == 8) return true; // 3
            patron = /[^-'`~!#$%^&*()_|+=?;:'",.<>\{\}\[\]\\\/]/; // 4
            te = String.fromCharCode(tecla); // 5
            return patron.test(te); // 6
        }
</script>