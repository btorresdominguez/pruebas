@using BPM.Dto.Models.Configuration
@model FtpDto
@{
    ViewBag.Title = "Edit";
}


<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Editar Ftp</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="~/Home/Index">Configuración</a></li>
                            <li><a href="~/Cause/Cause">Ftp</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="content">
    <div class="card">
        <div class="card-body card-block">
            <form action="@Url.Content("~/Ftp/Edit")" method="post" enctype="multipart/form-data" class="form-horizontal" style="width:60%">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nombre</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="Name" name="Name" placeholder="Nombre" required class="form-control" value="@Model.Name" onkeypress="return validar(event)">
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Servidor</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="Description" name="Host" placeholder="Servidor" required class="form-control" value="@Model.Host" onkeypress="return validar(event)">
                    </div>
                </div>


                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Puerto</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="Port" name="Port" placeholder="Puerto" required class="form-control" value="@Model.Port" onkeypress="return validar(event)">
                    </div>
                </div>


                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Usuario</label></div>
                    <div class="col-12 col-md-9">
                        <input type="text" id="Login" name="Login" placeholder="Usuario" required class="form-control" value="@Model.Login" onkeypress="return validar(event)">
                    </div>
                </div>


                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Contraseña</label></div>
                    <div class="col-12 col-md-9">
                        <input type="password" id="Password" name="Password" placeholder="Password" required class="form-control" value="@Model.Password" onkeypress="return validar(event)">
                    </div>
                </div>

                <div>
                    <button style="float: right;" type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"> </i>&nbsp; Actualizar</button>
                </div>
            </form>
        </div>

    </div>
    <div class="danger">
        <p class="error">@ViewBag.Error</p>
    </div>

</div>


@Scripts.Render("~/Scripts/User/User.js")

<script type="text/javascript">
function validar(e) { // 1
            tecla = (document.all) ? e.keyCode : e.which; // 2
            if (tecla == 8) return true; // 3
            patron = /[^-'`~!#$%^&*()_|+=?;:'",.<>\{\}\[\]\\\/]/; // 4
            te = String.fromCharCode(tecla); // 5
            return patron.test(te); // 6
        }
</script>