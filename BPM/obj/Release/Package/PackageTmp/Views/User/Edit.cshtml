@using BPM.Dto.Configuration
@model UserCreationDto
@{
    ViewBag.Title = "Edit";
}


<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Editar usuario</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="~/Home/Index">Configuración</a></li>
                            <li><a href="~/User/User">Usuarios</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="content">
    <div class="card">
        <div class="card-body card-block">
            <form action="@Url.Content("~/User/Edit")" method="post" enctype="multipart/form-data" class="form-horizontal" style="width:60%">

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Identificación</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="User" name="User" required placeholder="Identificación" class="form-control" value="@Model.UserList.FirstOrDefault().IdNumber" onkeypress="return validar(event)"></div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="password-input" class=" form-control-label">Contraseña</label></div>
                    <div class="col-12 col-md-9"><input type="password" id="password-input" name="Password" placeholder="Contraseña" value="" class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Nombres</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="Names" required placeholder="Nombres" value="@Model.UserList.FirstOrDefault().Names" class="form-control" onkeypress="return validar(event)"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Apellidos</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="Surnames" required placeholder="Apellidos" value="@Model.UserList.FirstOrDefault().Surnames" class="form-control" onkeypress="return validar(event)"></div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="select" class=" form-control-label">Rol</label></div>
                    <div class="col-12 col-md-9">
                        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.RoleList, "IdRole", "Name", Model.UserList.FirstOrDefault().IdRole), "Seleccione un rol", new { required = "required", @class = "form-control" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Epx</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="Epx" required placeholder="Epx" value="@Model.UserList.FirstOrDefault().Epx" class="form-control" onkeypress="return validar(event)"></div>
                </div>
                <div>
                    <button style="float: right;" type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"> </i>&nbsp; Actualizar</button>
                </div>
            </form>
        </div>

    </div>
    <div class="danger">
        <p class="error">@ViewBag.Error</p>
    </div>

</div>


@Scripts.Render("~/Scripts/User/User.js")

<script type="text/javascript">
    function validar(e) { // 1
        tecla = (document.all) ? e.keyCode : e.which; // 2
        if (tecla == 8) return true; // 3
        patron = /[^-'`~!#$%^&*()_|+=?;:'",.<>\{\}\[\]\\\/]/; // 4
        te = String.fromCharCode(tecla); // 5
        return patron.test(te); // 6
    }
</script>